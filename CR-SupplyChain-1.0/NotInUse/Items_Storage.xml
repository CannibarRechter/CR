<?xml version="1.0" encoding="utf-8" ?>
<Buildings>
  
  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <thingClass>Building</thingClass>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
  </ThingDef>

  <ThingDef Name="FurnitureBase" ParentName="BuildingBase" Abstract="True">
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
    <DesignationCategory>Furniture</DesignationCategory>
    <minifiedDef>MinifiedFurniture</minifiedDef>
    <tradeTags>
      <li>Furniture</li>
    </tradeTags>
  </ThingDef>
  
  <ThingDef ParentName="FurnitureBase">
    <defName>StoragePallet</defName>
    <label>storage pallet</label>
    <thingClass>Building_Storage</thingClass>
    <graphicData>
      <texPath>Items/Pallet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2.5,1.5)</drawSize>	  
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>1</costStuffCount>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>1050</WorkToMake>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>A wooden pallet, to ignorize your storage yard.</description>
    <size>(2,1)</size>
    <building>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>Resources</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
      </defaultStorageSettings>	 	  
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
  </ThingDef>

 <ThingDef ParentName="FurnitureBase">
    <defName>SupplyCabinet</defName>
    <label>supply cabinet</label>
    <thingClass>Building_Storage</thingClass>
    <graphicData>
      <texPath>Things/Building/Furniture/EquipmentRack</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3,2)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>1</costStuffCount>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>1050</WorkToMake>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>A supply cabinet, to organize your materials.</description>
    <size>(2,1)</size>
    <building>
      <preventDeterioration>true</preventDeterioration>	
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>Resources</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
      </defaultStorageSettings>	 	  
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
  </ThingDef>









</Buildings>