<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>
    <RecipeDef>
    <defName>MakeStuddedLeather</defName>
    <label>Make studded leather</label>
    <description>Make studded leather armor material from leathers and steel.</description>
    <jobString>Making studded leather.</jobString>
    <workAmount>350</workAmount>
    <workSkill>Crafting</workSkill>
    <workSpeedStat>TailoringSpeed</workSpeedStat>
    <soundWorking>Recipe_Tailor</soundWorking>
    <recipeUsers>
      <li>HandTailoringBench</li>
      <li>ElectricTailoringBench</li>	  
    </recipeUsers>
	<allowMixingIngredients>true</allowMixingIngredients>	
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Leathers</li>			
          </categories>
        </filter>
        <count>50</count>
      </li> 
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>			
          </thingDefs>
        </filter>
        <count>1</count>
      </li>	  
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Leathers</li>	
      </categories>	
      <thingDefs>	  
		<li>Steel</li>	
      </thingDefs>	
	  <exceptedThingDefs>
		<li>StuddedLeather</li>
	  </exceptedThingDefs>		  
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>Leathers</li>	
      </categories>		
      <thingDefs>		  
		<li>Steel</li>
      </thingDefs>
    </defaultIngredientFilter>	
    <products>
      <StuddedLeather>50</StuddedLeather>
    </products>	
  </RecipeDef>
